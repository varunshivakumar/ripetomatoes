<script>
  var sorting_link = $(".sortingLink");
  var red_line = '<div class="posAbs sortingLine" style="bottom:-20px;left:0;right:0;height:6px;background-color:#E85256;border-top-left-radius:8px;border-top-right-radius:8px;"></div>';

  sorting_link.mouseenter(function(){
    $(this).append(red_line)
  });
  sorting_link.mouseleave(function(){
    if ($(this).attr('id') != '<%=@sort_by%>'){
      $(this).find('.sortingLine').remove();
    }
  });
  $("#<%=@sort_by%>").append(red_line);
</script>
