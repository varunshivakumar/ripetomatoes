<div class="posRel" style="margin-bottom:35px;padding:20px;background-color:white;-webkit-box-shadow: 0px 5px 10px 0px #ddd;
    -moz-box-shadow: 0px 5px 10px 0px #ddd;
    box-shadow: 0px 5px 10px 0px #ddd;">
    <% movie = Tmdb::Movie.detail(review.movie) %>
    <div class="inlineBlock vertAlignTop">
      <% if movie["poster_path"].nil? %>
          <img src="http://www.valmorgan.com.au/wp-content/uploads/2016/06/default-movie-1-3.jpg" height="200px" width="100px" /><!-- create link to image -->
      <% else %>
          <img src="<%="https://image.tmdb.org/t/p/original/"+movie["poster_path"]%>" height="200px" width="100px" /><!-- create link to image -->
      <% end %>
    </div>
    <div class="inlineBlock vertAlignTop" style="padding-left:40px;">
      <div class="lora" style="font-size:1.6em;margin-bottom:15px;font-weight:700;"><%= movie["original_title"] %></div>
      <div class="opens" style="font-size:1.8em;margin-bottom:15px;font-weight:400;"><%= review.comment %></div>
      <div class="merri" style="font-size:1.4em;margin-bottom:15px;color:gray;">
        <% review.rating.times do %>
            <%= image_tag 'star.png', height: '20px', width: '20px', class: 'inlineBlock vertAlignTop', style: 'margin-right:10px;margin-top:2px;' %>
        <% end %>
        <div class="inlineBlock vertAlignTop"><%= review.user.email %> <span style="margin: 0 5px">on</span> <%= review.created_at.strftime('%b %d, %Y') %></div>
      </div>
    </div>
</div>